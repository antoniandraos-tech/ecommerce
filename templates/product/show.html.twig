{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_products') }}">Produits</a></li>
            <li class="breadcrumb-item active">{{ product.name }}</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6">
            {% if product.image %}
                <img src="{{ asset('uploads/products/' ~ product.image) }}" class="img-fluid rounded" alt="{{ product.name }}">
            {% else %}
                <img src="https://via.placeholder.com/500x500?text=Pas+d%27image" class="img-fluid rounded" alt="Pas d'image">
            {% endif %}
        </div>

        <div class="col-md-6">
            <h1>{{ product.name }}</h1>
            
            <div class="mb-3">
                {% if product.stock > 10 %}
                    <span class="badge bg-success">En stock</span>
                {% elseif product.stock > 0 %}
                    <span class="badge bg-warning">Stock limité ({{ product.stock }} restants)</span>
                {% else %}
                    <span class="badge bg-danger">Rupture de stock</span>
                {% endif %}
            </div>

            <h2 class="text-primary">{{ product.price }} €</h2>

            <div class="my-4">
                <h4>Description</h4>
                <p>{{ product.description|nl2br }}</p>
            </div>

            {% if product.stock > 0 %}
                <form method="post" action="{{ path('app_cart_add', {'id': product.id}) }}">
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantité :</label>
                        <input type="number" name="quantity" id="quantity" class="form-control" value="1" min="1" max="{{ product.stock }}" style="width: 100px;">
                    </div>
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-cart-plus"></i> Ajouter au panier
                    </button>
                </form>
            {% else %}
                <button class="btn btn-secondary btn-lg" disabled>
                    Produit indisponible
                </button>
            {% endif %}

            <div class="mt-4">
                <a href="{{ path('app_products') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Retour aux produits
                </a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
