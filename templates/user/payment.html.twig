{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Finaliser votre commande</h1>

    <div class="row">
        
        <div class="col-md-8">
           
            {# 1. Adresse de livraison #}
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">1. Adresse de livraison</h4>
                </div>
                <div class="card-body">
                    {% if app.user.adresses|length > 0 %}
                        <div class="mb-3">
                            <label class="form-label"><strong>Choisissez une adresse :</strong></label>
                            {% for adresse in app.user.adresses %}
                                <div class="form-check mb-2">
                                    <input class="form-check-input" type="radio" name="adresse" id="adresse{{ adresse.id }}" 
                                           value="{{ adresse.id }}" {% if loop.first %}checked{% endif %}>
                                    <label class="form-check-label" for="adresse{{ adresse.id }}">
                                        <strong>{{ adresse.adress }}</strong><br>
                                        {{ adresse.codepostal }} {{ adresse.ville }}<br>
                                        {{ adresse.pays }}
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                        <hr>
                    {% endif %}
                    
                    <button class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" 
                            data-bs-target="#newAddressForm" aria-expanded="false">
                        + Ajouter une nouvelle adresse
                    </button>
                    
                    <div class="collapse mt-3" id="newAddressForm">
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="newAdress" class="form-label">Adresse</label>
                                <input type="text" class="form-control" id="newAdress" placeholder="123 rue Example">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="newCodePostal" class="form-label">Code postal</label>
                                <input type="text" class="form-control" id="newCodePostal" placeholder="75001">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="newVille" class="form-label">Ville</label>
                                <input type="text" class="form-control" id="newVille" placeholder="Paris">
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="newPays" class="form-label">Pays</label>
                                <input type="text" class="form-control" id="newPays" placeholder="France" value="France">
                            </div>
                        </div>
                        <button type="button" class="btn btn-success" onclick="saveNewAddress()">
                            Enregistrer cette adresse
                        </button>
                    </div>
                </div>
            </div>

            {# 2. Choix du livreur #}
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">2. Choisir un livreur</h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">

                        <div class="col-md-6">
                            <div class="carrier-card border rounded p-3 h-100" onclick="selectCarrier('ups', this)">
                                <input class="form-check-input me-2" type="radio" name="carrier" id="carrier_ups" value="ups" checked>
                                <label for="carrier_ups" class="form-check-label d-flex align-items-center gap-2" style="cursor:pointer;">
                                    <span class="fs-4"></span>
                                    <div>
                                        <strong>UPS</strong><br>
                                        <small class="text-muted">Livraison en 2-3 jours — 4,99 €</small>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="carrier-card border rounded p-3 h-100" onclick="selectCarrier('mondial_relay', this)">
                                <input class="form-check-input me-2" type="radio" name="carrier" id="carrier_mondial" value="mondial_relay">
                                <label for="carrier_mondial" class="form-check-label d-flex align-items-center gap-2" style="cursor:pointer;">
                                    <span class="fs-4"></span>
                                    <div>
                                        <strong>Mondial Relay</strong><br>
                                        <small class="text-muted">Livraison en point relais 3-5 jours — 2,99 €</small>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="carrier-card border rounded p-3 h-100" onclick="selectCarrier('colissimo', this)">
                                <input class="form-check-input me-2" type="radio" name="carrier" id="carrier_colissimo" value="colissimo">
                                <label for="carrier_colissimo" class="form-check-label d-flex align-items-center gap-2" style="cursor:pointer;">
                                    <span class="fs-4"></span>
                                    <div>
                                        <strong>Colissimo</strong><br>
                                        <small class="text-muted">Livraison en 2-4 jours — 5,90 €</small>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="carrier-card border rounded p-3 h-100" onclick="selectCarrier('chronopost', this)">
                                <input class="form-check-input me-2" type="radio" name="carrier" id="carrier_chronopost" value="chronopost">
                                <label for="carrier_chronopost" class="form-check-label d-flex align-items-center gap-2" style="cursor:pointer;">
                                    <span class="fs-4"></span>
                                    <div>
                                        <strong>Chronopost</strong><br>
                                        <small class="text-muted">Livraison express 24h — 9,90 €</small>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="carrier-card border rounded p-3 h-100" onclick="selectCarrier('dpd', this)">
                                <input class="form-check-input me-2" type="radio" name="carrier" id="carrier_dpd" value="dpd">
                                <label for="carrier_dpd" class="form-check-label d-flex align-items-center gap-2" style="cursor:pointer;">
                                    <span class="fs-4"></span>
                                    <div>
                                        <strong>DPD</strong><br>
                                        <small class="text-muted">Livraison en 3-5 jours — 3,99 €</small>
                                    </div>
                                </label>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="carrier-card border rounded p-3 h-100" onclick="selectCarrier('fedex', this)">
                                <input class="form-check-input me-2" type="radio" name="carrier" id="carrier_fedex" value="fedex">
                                <label for="carrier_fedex" class="form-check-label d-flex align-items-center gap-2" style="cursor:pointer;">
                                    <span class="fs-4"></span>
                                    <div>
                                        <strong>FedEx</strong><br>
                                        <small class="text-muted">Livraison internationale 3-7 jours — 12,90 €</small>
                                    </div>
                                </label>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            {# 3. Mode de paiement #}
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">3. Choisir un mode de paiement</h4>
                </div>
                <div class="card-body">
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="cardPayment" 
                               value="card" checked onchange="showPaymentForm('card')">
                        <label class="form-check-label" for="cardPayment">
                            <strong> Carte Bancaire</strong>
                        </label>
                    </div>
                  
                    <div id="cardForm" class="payment-form mb-4 p-3 border rounded">
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="cardNumber" class="form-label">Numéro de carte</label>
                                <input type="text" class="form-control" id="cardNumber" 
                                       placeholder="1234 5678 9012 3456" maxlength="19" 
                                       oninput="formatCardNumber(this)">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="cardName" class="form-label">Nom sur la carte</label>
                                <input type="text" class="form-control" id="cardName" 
                                       placeholder="JEAN DUPONT" style="text-transform: uppercase;">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="cardExpiry" class="form-label">Date d'expiration</label>
                                <input type="text" class="form-control" id="cardExpiry" 
                                       placeholder="MM/AA" maxlength="5" 
                                       oninput="formatExpiry(this)">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="cardCVV" class="form-label">CVV</label>
                                <input type="text" class="form-control" id="cardCVV" 
                                       placeholder="123" maxlength="3" pattern="[0-9]{3}">
                            </div>
                        </div>
                        <div class="alert alert-info" role="alert">
                            <small> Vos informations de paiement sont sécurisées et cryptées</small>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="paypalPayment" 
                               value="paypal" onchange="showPaymentForm('paypal')">
                        <label class="form-check-label" for="paypalPayment">
                            <strong> PayPal</strong>
                        </label>
                    </div>
                
                    <div id="paypalForm" class="payment-form mb-4 p-3 border rounded" style="display: none;">
                        <p>Vous serez redirigé vers PayPal pour finaliser votre paiement de manière sécurisée.</p>
                        <div class="text-center">
                            <a href="https://www.paypal.com/signin">
                                <img src="https://www.paypalobjects.com/webstatic/mktg/logo/pp_cc_mark_111x69.jpg" 
                                     alt="PayPal" style="max-width: 150px;">
                            </a>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="applePayment" 
                               value="apple_pay" onchange="showPaymentForm('applepay')">
                        <label class="form-check-label" for="applePayment">
                            <strong> Apple Pay</strong>
                        </label>
                    </div>
                    
                    <div id="applePayForm" class="payment-form mb-4 p-3 border rounded" style="display: none;">
                        <p>Scannez le code QR avec votre iPhone pour payer avec Apple Pay :</p>
                        <div class="text-center">
                            <div class="border p-3 d-inline-block">
                                <img src="">
                            </div>
                            <p class="mt-2"><small>Ou utilisez votre appareil Apple pour payer directement</small></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Résumé commande #}
        <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Résumé de la commande</h4>
                </div>
                <div class="card-body">
                    {% for item in items %}
                        <div class="d-flex justify-content-between mb-2">
                            <span>{{ item.product.name }} (x{{ item.quantity }})</span>
                            <span>{{ item.product.price * item.quantity }} €</span>
                        </div>
                    {% endfor %}
                    <hr>
                    <div class="d-flex justify-content-between mb-1">
                        <span><strong>Sous-total :</strong></span>
                        <span>{{ total }} €</span>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <span><strong>Livraison :</strong></span>
                        <span id="shippingCost">4,99 €</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span><strong>Total :</strong></span>
                        <span class="h4 text-dark"><strong id="grandTotal">{{ total + 4.99 }} €</strong></span>
                    </div>
                    <div class="mt-2 mb-3">
                        <small class="text-muted">Livreur sélectionné : <strong id="carrierLabel">UPS</strong></small>
                    </div>
                     <div class="col-md-6">
                            <div class="carrier-card border rounded p-3 h-100" onclick="selectCarrier('cvg', this)">
                                <input class="form-check-input me-2" type="radio" name="carrier" id="carrier_cvg" value="cvg" checked>
                                <label for="carrier_cvg" class="form-check-label d-flex align-items-center gap-2" style="cursor:pointer;">
                                    <span class="fs-4"></span>
                                    <div>
                                        <strong a href=".\templates\user">Veuillez lire et acceptez les conditions générales de ventes (cvg</strong><br>
                                        <small class="text-muted"></small>
                                    </div>
                                </label>
                            </div>
                        </div>
                    <button type="button" class="btn btn-dark btn-lg w-100 mt-3" onclick="confirmPayment()">
                        Confirmer le paiement
                    </button>
                    
                    <a href="{{ path('app_basket') }}" class="btn btn-outline-secondary w-100 mt-2">
                        Retour au panier
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
const baseTotal = {{ total }};

const carrierPrices = {
    'ups':           { label: 'UPS',           price: 4.99 },
    'mondial_relay': { label: 'Mondial Relay', price: 2.99 },
    'colissimo':     { label: 'Colissimo',     price: 5.90 },
    'chronopost':    { label: 'Chronopost',    price: 9.90 },
    'dpd':           { label: 'DPD',           price: 3.99 },
    'fedex':         { label: 'FedEx',         price: 12.90 },
};

function selectCarrier(value, card) {
    // Décocher toutes les cartes
    document.querySelectorAll('.carrier-card').forEach(c => c.classList.remove('border-dark', 'bg-light'));
    card.classList.add('border-dark', 'bg-light');

    // Cocher le bon radio
    document.getElementById('carrier_' + value).checked = true;

    // Mettre à jour le résumé
    const carrier = carrierPrices[value];
    document.getElementById('shippingCost').textContent = carrier.price.toFixed(2).replace('.', ',') + ' €';
    document.getElementById('grandTotal').textContent = (baseTotal + carrier.price).toFixed(2).replace('.', ',') + ' €';
    document.getElementById('carrierLabel').textContent = carrier.label;
}

// Sélectionner UPS par défaut au chargement
window.addEventListener('DOMContentLoaded', () => {
    const upsCard = document.querySelector('.carrier-card');
    if (upsCard) upsCard.classList.add('border-dark', 'bg-light');
});

function formatCardNumber(input) {
    let value = input.value.replace(/\s/g, '');
    let formatted = value.match(/.{1,4}/g);
    input.value = formatted ? formatted.join(' ') : value;
}

function formatExpiry(input) {
    let value = input.value.replace(/\D/g, '');
    if (value.length >= 2) {
        input.value = value.slice(0, 2) + '/' + value.slice(2, 4);
    } else {
        input.value = value;
    }
}

function showPaymentForm(method) {
    document.getElementById('cardForm').style.display = 'none';
    document.getElementById('paypalForm').style.display = 'none';
    document.getElementById('applePayForm').style.display = 'none';
    
    if (method === 'card') {
        document.getElementById('cardForm').style.display = 'block';
    } else if (method === 'paypal') {
        document.getElementById('paypalForm').style.display = 'block';
    } else if (method === 'applepay') {
        document.getElementById('applePayForm').style.display = 'block';
    }
}

function saveNewAddress() {
    const adress = document.getElementById('newAdress').value;
    const codePostal = document.getElementById('newCodePostal').value;
    const ville = document.getElementById('newVille').value;
    const pays = document.getElementById('newPays').value;
    
    if (!adress || !codePostal || !ville || !pays) {
        alert('Veuillez remplir tous les champs');
        return;
    }
    alert('Adresse enregistrée avec succès !');
}

function confirmPayment() {
    const paymentMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
    const carrier = document.querySelector('input[name="carrier"]:checked').value;

    const adresseSelected = document.querySelector('input[name="adresse"]:checked');
    const newAddressForm = document.getElementById('newAddressForm');
    
    if (!adresseSelected && !newAddressForm.classList.contains('show')) {
        alert('Veuillez sélectionner ou ajouter une adresse de livraison');
        return;
    }

    if (!carrier) {
        alert('Veuillez sélectionner un livreur');
        return;
    }
    
    if (paymentMethod === 'card') {
        const cardNumber = document.getElementById('cardNumber').value;
        const cardName = document.getElementById('cardName').value;
        const cardExpiry = document.getElementById('cardExpiry').value;
        const cardCVV = document.getElementById('cardCVV').value;
        
        if (!cardNumber || !cardName || !cardExpiry || !cardCVV) {
            alert('Veuillez remplir toutes les informations de carte bancaire');
            return;
        }
        if (cardNumber.replace(/\s/g, '').length !== 16) {
            alert('Le numéro de carte doit contenir 16 chiffres');
            return;
        }
        if (cardCVV.length !== 3) {
            alert('Le CVV doit contenir 3 chiffres');
            return;
        }
    }
    
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = "{{ path('app_payment_confirm') }}";
    
    const inputPayment = document.createElement('input');
    inputPayment.type = 'hidden';
    inputPayment.name = 'payment_method';
    inputPayment.value = paymentMethod;

    const inputCarrier = document.createElement('input');
    inputCarrier.type = 'hidden';
    inputCarrier.name = 'carrier';
    inputCarrier.value = carrier;
    
    form.appendChild(inputPayment);
    form.appendChild(inputCarrier);
    document.body.appendChild(form);
    form.submit();
}
</script>

<style>
.payment-form {
    background-color: #f8f9fa;
}
.carrier-card {
    cursor: pointer;
    transition: all 0.2s ease;
}
.carrier-card:hover {
    background-color: #f8f9fa;
    border-color: #343a40 !important;
}
.carrier-card.border-dark {
    border-width: 2px !important;
}
</style>
{% endblock %}
