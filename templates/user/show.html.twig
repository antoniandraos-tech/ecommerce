{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="mb-4">Mon profil</h1>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}

            {# Informations personnelles #}
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Informations personnelles</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Pr√©nom :</strong>
                            <p class="text-muted">{{ user.prenom }}</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Nom :</strong>
                            <p class="text-muted">{{ user.nom }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Email :</strong>
                            <p class="text-muted">{{ user.email }}</p>
                        </div>
                        <div class="col-md-6">
                            <strong>T√©l√©phone :</strong>
                            <p class="text-muted">{{ user.telephone }}</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Date de naissance :</strong>
                            <p class="text-muted">{{ user.datedenaissance|date('d/m/Y') }}</p>
                        </div>
                    </div>

                    {% if user.adresses|length > 0 %}
                    <div class="row mb-3">
                        <div class="col-12">
                            <strong>Mes adresses :</strong>
                            <ul class="list-group mt-2">
                                {% for adresse in user.adresses %}
                                    <li class="list-group-item">
                                        {{ adresse.adress }}<br>
                                        {{ adresse.codepostal }} {{ adresse.ville }}<br>
                                        {{ adresse.pays }}
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    {% endif %}

                    <div class="mt-4">
                        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-dark">
                            Modifier mon profil
                        </a>
                        <a href="{{ path('app_home') }}" class="btn btn-secondary ms-2">
                            Retour √† l'accueil
                        </a>
                    </div>
                </div>
            </div>

            {# Historique des commandes #}
            <div class="card mb-4">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Historique des commandes</h4>
                </div>
                <div class="card-body">
                    {% if orders|length > 0 %}
                        {% for order in orders %}
                            <div class="border rounded p-3 mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <strong>Commande #{{ order.id }}</strong>
                                    <span class="badge
                                        {% if order.status == 'pay√©e' %}bg-success
                                        {% elseif order.status == 'exp√©di√©e' %}bg-primary
                                        {% elseif order.status == 'annul√©e' %}bg-danger
                                        {% else %}bg-secondary
                                        {% endif %}">
                                        {{ order.status|capitalize }}
                                    </span>
                                    <span class="text-muted small">{{ order.createdAt|date('d/m/Y √† H:i') }}</span>
                                </div>
                                {% if order.carrier %}
                                <div class="mb-2">
                                    <small class="text-muted">üöö Livreur : <strong>
                                        {% if order.carrier == 'ups' %}UPS
                                        {% elseif order.carrier == 'mondial_relay' %}Mondial Relay
                                        {% elseif order.carrier == 'colissimo' %}Colissimo
                                        {% elseif order.carrier == 'chronopost' %}Chronopost
                                        {% elseif order.carrier == 'dpd' %}DPD
                                        {% elseif order.carrier == 'fedex' %}FedEx
                                        {% else %}{{ order.carrier }}
                                        {% endif %}
                                    </strong></small>
                                </div>
                                {% endif %}

                                <table class="table table-sm table-bordered mb-2">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Produit</th>
                                            <th class="text-center">Quantit√©</th>
                                            <th class="text-end">Prix unitaire</th>
                                            <th class="text-end">Sous-total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for item in order.items %}
                                        <tr>
                                            <td>{{ item.product.name }}</td>
                                            <td class="text-center">{{ item.quantity }}</td>
                                            <td class="text-end">{{ item.product.price|number_format(2, ',', ' ') }} ‚Ç¨</td>
                                            <td class="text-end">{{ (item.product.price * item.quantity)|number_format(2, ',', ' ') }} ‚Ç¨</td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3" class="text-end"><strong>Total :</strong></td>
                                            <td class="text-end"><strong>{{ order.total|number_format(2, ',', ' ') }} ‚Ç¨</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p class="text-muted mb-0">Vous n'avez pas encore pass√© de commande.</p>
                    {% endif %}
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}
